<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>COGITRON OS</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <style>
        :root { --accent: #00ff88; --bg: #1e1f20; --sidebar: #131314; --text: #e3e3e3; --input-bg: #282a2d; }
        body, html { margin: 0; padding: 0; height: 100%; background: var(--bg); color: var(--text); font-family: 'Inter', sans-serif; overflow: hidden; }
        #login-overlay { position: fixed; inset: 0; background: var(--bg); z-index: 9999; display: flex; align-items: center; justify-content: center; }
        .login-box { background: var(--sidebar); padding: 40px; border-radius: 20px; text-align: center; width: 320px; border: 1px solid #333; }
        .login-input { background: var(--input-bg); border: 1px solid #444; color: white; padding: 12px; border-radius: 8px; width: 100%; margin: 20px 0; outline: none; box-sizing: border-box; }
        .app-wrapper { display: none; height: 100vh; }
        .sidebar { width: 260px; background: var(--sidebar); display: flex; flex-direction: column; border-right: 1px solid #222; }
        .sidebar-header { padding: 25px 20px 10px 20px; font-weight: 600; font-size: 0.8rem; color: var(--accent); letter-spacing: 1px; }
        .chat-list { flex: 1; overflow-y: auto; padding: 10px; }
        .chat-item { padding: 10px 15px; border-radius: 10px; margin-bottom: 2px; cursor: pointer; font-size: 0.9rem; color: #c4c7c5; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
        .chat-item:hover { background: #282a2d; color: white; }
        .main-content { flex: 1; display: flex; flex-direction: column; position: relative; }
        #chat-view { flex: 1; overflow-y: auto; padding: 40px 15%; display: flex; flex-direction: column; gap: 30px; scroll-behavior: smooth; }
        .msg-container { width: 100%; max-width: 800px; margin: 0 auto; }
        .label { font-size: 0.75rem; font-weight: 600; text-transform: uppercase; margin-bottom: 8px; color: #8e918f; }
        .bottom-bar { padding: 30px; display: flex; justify-content: center; }
        .input-box { width: 100%; max-width: 850px; background: var(--input-bg); border-radius: 15px; display: flex; align-items: center; padding: 5px 20px; border: 1px solid #333; }
        input { flex: 1; background: none; border: none; color: white; outline: none; font-size: 1rem; font-family: 'Inter'; padding: 15px 0; }
        .send-btn { background: none; border: none; color: var(--accent); cursor: pointer; font-size: 1.5rem; padding: 10px; }
    </style>
</head>
<body onload="chargerListe()">
    <div id="login-overlay">
        <div class="login-box">
            <h2 style="margin:0; font-weight:400; color:var(--accent);">COGITRON OS</h2>
            <input type="text" id="user-name" class="login-input" placeholder="Ton PrÃ©nom" autocomplete="off">
            <button onclick="login()" style="background:var(--accent); color:black; border:none; padding:12px; width:100%; border-radius:8px; cursor:pointer; font-weight:600;">CONNEXION</button>
        </div>
    </div>
    <div class="app-wrapper" id="app">
        <div class="sidebar">
            <div class="sidebar-header">UNITÃ‰ DE CALCUL</div>
            <div id="liste" class="chat-list"></div>
            <button style="margin:15px; padding:10px; border:1px solid #333; background:transparent; color:#8e918f; border-radius:10px; cursor:pointer;" onclick="nouveauChat()">+ Nouveau</button>
        </div>
        <div class="main-content">
            <div id="chat-view"></div>
            <div class="bottom-bar">
                <div class="input-box">
                    <input type="text" id="user-in" placeholder="Saisir une commande..." autocomplete="off">
                    <button class="send-btn" onclick="envoyer()">âž¤</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        let currentDisc = "general";
        async function login() {
            const u = document.getElementById('user-name').value.trim();
            if(!u) return;
            await fetch('/login', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({username: u}) });
            document.getElementById('login-overlay').style.display = 'none';
            document.getElementById('app').style.display = 'flex';
            chargerListe();
        }
        async function envoyer() {
            const i = document.getElementById('user-in');
            if(!i.value.trim()) return;
            const text = i.value; i.value = "";
            const box = document.getElementById('chat-view');
            box.innerHTML += `<div class="msg-container"><div class="label">Utilisateur</div><div>${text}</div></div>`;
            const res = await fetch('/chat', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({message: text, id_discussion: currentDisc}) });
            const data = await res.json();
            box.innerHTML += `<div class="msg-container"><div class="label" style="color:var(--accent)">Cogitron</div><div>${marked.parse(data.reponse)}</div></div>`;
            box.scrollTop = box.scrollHeight;
        }
        async function chargerListe() {
            const res = await fetch('/get_discussions');
            const data = await res.json();
            document.getElementById('liste').innerHTML = data.discussions.map(d => `<div class="chat-item" onclick="currentDisc='${d.replace('.json','')}'; document.getElementById('chat-view').innerHTML='' ">ðŸ•’ ${d.replace('.json','')}</div>`).join('');
        }
        function nouveauChat() { let n = prompt("Nom ?"); if(n) { currentDisc = n; chargerListe(); } }
        document.getElementById('user-in').onkeypress = (e) => { if(e.key === 'Enter') envoyer(); };
    </script>
</body>
</html>
